<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CrocoManager.ViewModel"
             x:Class="CrocoManager.Views.LoginPage"
             Title="LoginPage">

    <VerticalStackLayout Padding="30" Spacing="15">
        <Entry Placeholder="Username" Text="{Binding Username}" />
        <Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}" />
        <Button Text="Login" Command="{Binding LoginCommand}" />
        <Button Text="Register" Command="{Binding GoToRegisterCommand}" />
        <Button Text="Test Supabase Connection"
        Command="{Binding TestConnectionCommand}" />
        <Button Text="Test Supabase By getting Database Field"
Command="{Binding GetTextMessageCommand}" />
    </VerticalStackLayout>
</ContentPage>